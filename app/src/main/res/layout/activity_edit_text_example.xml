<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_edit_text_example"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lenovo.androiddemo.EditTextExample">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:hint="Enter Username"
        android:textColor="#445567"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/editText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="#aeadad"
        android:ems="10"
        android:id="@+id/editText2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:id="@+id/editText3" />

    <Button
        android:text="Button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button21"
        android:textColor="#ffbb78"
        android:background="#004a94"/>

    <Button
        android:text="Button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button22"
        android:textColor="#ffbb78"
        android:background="#004a94"/>
    <Button
        android:text="Button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button23"
        android:textColor="#ffbb78"
        android:background="#004a94"/>

    <Button
        android:text="Button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button24"
        android:textColor="#ffbb78"
        android:background="#004a94"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radio"
        android:weightSum="3"
        android:orientation="horizontal"
        >
    <RadioButton
        android:text="Male"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton"
        android:layout_weight="1.8"/>

        <RadioButton
            android:text="Female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:layout_weight="1.2"
            />
    </RadioGroup>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/spinner"
        android:entries="@array/category"

       />
</LinearLayout>
